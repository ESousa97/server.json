{
  "name": "json-server-vercel",
  "version": "1.0.0",
  "description": "EsDataBase API (Express + PostgreSQL) ready for Vercel Functions",
  "main": "api/index.js",
  "scripts": {
    "start": "node api/index.js",
    "dev": "nodemon api/index.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "audit:fix": "npm audit fix",
    "check": "npm run format:check && npm run lint && npm test",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@vercel/postgres": "^0.9.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.2.1",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.3.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0"
  },
  "lint-staged": {
    "**/*.{js,cjs,mjs,json,md,yml,yaml}": [
      "prettier --write"
    ],
    "**/*.{js,cjs,mjs}": [
      "eslint --fix"
    ]
  }
}
